@model Book
@using BookStore.Enums
@{
    ViewData["Title"] = "Add New Book";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    //var selectVal = "English";
}

<div class="container">
    <h3 class="display-4">Add New Book</h3>
    <hr />
    @if (ViewBag.isSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congartulations</strong> You Added The Book Successfully<br />
            Click <a asp-controller="Book" asp-action="GetBook" asp-route-id="@ViewBag.BookId">Here</a> To view The details
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status"  id="myLoader" style="display:none">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <form method="post" data-ajax="true" data-ajax-complete="myComplete" data-ajax-success="mySuccess"
          data-ajax-failure="myFailure" data-ajax-loading="#myLoader"
          asp-action="AddNewBook" asp-controller="Book">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="LanguageId"></label>
            <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.language">
                <option value="">Please Choose The Book Language</option>
            </select>
            <span class="text-danger" asp-validation-for="LanguageId"></span>
        </div>
        @*<div class="form-group">
            <label asp-for="LanguageEnum"></label>
            <select asp-for="LanguageEnum" class="form-control" asp-items="Html.GetEnumSelectList<LanguageEnum>()">
                <option value="">Please Choose The Book Language</option>
            </select>
            <span class="text-danger" asp-validation-for="LanguageEnum"></span>
        </div>*@
        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span class="text-danger" asp-validation-for="Author"></span>

        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="TotalPages"></label>
            <input asp-for="TotalPages" class="form-control" />
            <span class="text-danger" asp-validation-for="TotalPages"></span>

        </div>
        <div class="form-group">
            <label asp-for="CoverPhoto"></label>
            <div class="mb-3">
                @*<label for="formFile" class="form-label">Default file input example</label>*@
                <input class="form-control" asp-for="CoverPhoto" id="formFile">
            </div>
            <span class="text-danger" asp-validation-for="CoverPhoto"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Book" class="btn btn-primary" />
        </div>

    </form>
</div>

@section scripts {
    <script>

        function myComplete(data) {
            alert("I am from complete");
        }

        function mySuccess(data) {
            alert("I am from success");
        }

        function myFailure(data) {
            alert("I am from failure");
        }

    </script>
}